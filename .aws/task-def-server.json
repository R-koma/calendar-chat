{
  "family": "calendar-chat-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "ecsTaskExecutionRole",
  "taskRoleArn": "ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "server",
      "image": "${SERVER_IMAGE_URI}",
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "FLASK_APP",
          "value": "app/main.py"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "${SECRET_KEY_ARN}:SECRET_KEY"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "${DATABASE_URL_ARN}"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "${JWT_SECRET_KEY_ARN}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/calendar-chat-server",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
